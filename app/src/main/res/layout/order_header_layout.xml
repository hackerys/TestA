<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="@color/g2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_header"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_marginLeft"
            android:text="张三555"
            android:textColor="@color/g2"
            android:textSize="@dimen/common_text_size4"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_marginLeft"
            android:layout_marginRight="@dimen/common_marginLeft"
            android:text="已付定金"
            android:textColor="@color/r"
            android:textSize="@dimen/common_text_size4"/>

        <TextView
            android:id="@+id/divider1"
            style="@style/line_verticle"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="@dimen/common_marginLeft"
            android:layout_marginTop="20px"
            android:layout_toLeftOf="@+id/order_status"
            />

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider1"
            android:text="订单编号:2015120800007573"
            android:textColor="@color/g2"
            android:textSize="@dimen/common_text_size4"
            />
    </RelativeLayout>
</LinearLayout>